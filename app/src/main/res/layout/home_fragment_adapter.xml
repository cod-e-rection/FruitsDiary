<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fruitImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fruitId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="007"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fruitImageView"
        app:layout_constraintTop_toTopOf="@+id/fruitImageView" />

    <TextView
        android:id="@+id/fruitType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fruitId"
        app:layout_constraintEnd_toEndOf="@+id/fruitId"
        app:layout_constraintTop_toBottomOf="@+id/fruitId"
        android:text="Apple" />

    <TextView
        android:id="@+id/fruitVitamins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="19"
        app:layout_constraintStart_toStartOf="@+id/fruitType"
        app:layout_constraintEnd_toEndOf="@+id/fruitType"
        app:layout_constraintTop_toBottomOf="@+id/fruitType" />

</androidx.constraintlayout.widget.ConstraintLayout>